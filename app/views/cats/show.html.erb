<div id="cat">
<%= image_tag(image_cats_path(cat: @cat)) %>
</div>
<div id="meta">
  <% exif = exif(@cat).split %>
  <%= exif[2] %>
  <%= exif[1] %>
  <%= exif[6] %>
</div>

<div id="comments">
<h2>Comments</h2>

<% if current_user %>
  <%= form_for @comment do |f| %>
  <%= f.text_area :comment %>
  <%= f.hidden_field :cat %>

  <div>
    <%= f.button "Say It!!!", class: "btn btn-primary" %>
  </div>
<% end %>
<% end %>

<ol>
  <%= render partial: "comment", collection: @comments %>
</ol>
</div>